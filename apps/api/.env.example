# Environment Variables for Local Development

# Copy this file to .env.local and uncomment the variables you need

# Timezone Configuration (Africa/Johannesburg for consistent RSA timezone)
TZ=Africa/Johannesburg

# Database Configuration (for local PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/redbut?schema=public

# API Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-secret-key-here

# OpenAI Configuration (optional)
OPENAI_API_KEY=your-openai-key-here

# Frontend URLs
FRONTEND_URL=http://localhost:3000
FRONTEND_URL_ADMIN=http://localhost:3002
FRONTEND_URL_WAITER=http://localhost:3003

# Redis Configuration (if using local Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Session Configuration
SESSION_CACHE_TTL_MINUTES=30

# Logging Level
LOG_LEVEL=debug
