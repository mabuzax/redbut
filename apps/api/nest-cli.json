{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "tsc",
    "webpack": false,
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.json",
    "assets": [
      { "include": "**/*.proto", "outDir": "dist" },
      { "include": "**/*.hbs",   "outDir": "dist" },
      { "include": "**/*.sql",   "outDir": "dist" }
    ],
    "watchAssets": true
  },
  "generateOptions": { "spec": true }
}
