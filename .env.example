# RedBut - Environment Variables Example
# Copy this file to .env.local and adjust values

# === Server Configuration ===
PORT=3001
NODE_ENV=development

# === Frontend URLs ===
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001

# === Database Configuration (Phase 2) ===
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=redbut
DATABASE_URL=postgresql://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_DATABASE}

# === Authentication (Phase 2) ===
JWT_SECRET=change_this_to_a_secure_random_string
JWT_EXPIRES_IN=7d

# === OpenAI Integration (Phase 4) ===
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# === WebSocket Configuration ===
WS_PORT=3002

# === Logging ===
LOG_LEVEL=debug

# === Feature Flags ===
ENABLE_CHAT_HISTORY=false
ENABLE_ANALYTICS=false
